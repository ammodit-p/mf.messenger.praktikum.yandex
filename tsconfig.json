{
    "compileOnSave": false,
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "noUnusedLocals": true, 
      "noUnusedParameters": true,
      "strictNullChecks": true,
      "alwaysStrict": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "ES2017",
      "outDir": "./dist",
      "types": [
        "handlebars"
      ]
    },
    "include": [
      "src/**/*",
    ],
    
    "exclude": [
      "node_modules",
      "static",
      "dist"
    ]
}
{
    "compileOnSave": false,
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "noUnusedLocals": true, 
      "noUnusedParameters": true,
      "strictNullChecks": true,
      "alwaysStrict": false,
      "removeComments": true,
      "sourceMap": true,
      "target": "ES2019",
      "outDir": "./dist",
      "plugins": [
        {
          "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
          "after": true
        }
      ],  
      "types": [
        "handlebars",
        "mocha-jsdom",
        "mocha",
        "chai",
        "jsdom",
        "sinon",
        "nock"
      ]
    },
    "exclude": [
      "src/**/*.spec.ts",
      "node_modules",
      "static",
      "dist",
      "test/**/*"
    ],
    "include": [
      "src/**/*.ts",
    ]
}
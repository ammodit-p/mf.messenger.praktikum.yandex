{
    "name": "mf.messenger.praktikum.yandex",
    "version": "1.0.0",
    "private": true,
    "devDependencies": {
        "copyfiles": "^2.4.1",
        "express": "4.17.1",
        "handlebars": "^4.7.6"
    },
    "scripts": {
        "tsc": "tsc",
        "start": "node ./server.js",
        "dev": "tsc -w & npm run start & browser-sync start --proxy 'localhost:3000' --files 'dist'",
        "clean": "rm -rf dist/**",
        "html": "find ./src/ -name \"*.html\" -type f -exec copyfiles -u 1 {} ./dist \\;",
        "css": "find ./src/ -name \"*.css\" -type f -exec copyfiles -u 1 {} ./dist \\;",
        "build": "npm run clean && npm run tsc && npm run html && npm run css"
    },
    "dependencies": {
        "typescript": "4.1.2"
    },
    "engines": {
        "node": "12.16.0",
        "npm": "6.13.4"
    }
}

{
    "name": "mf.messenger.praktikum.yandex",
    "version": "1.0.0",
    "private": true,
    "devDependencies": {
        "@types/chai": "4.2.15",
        "@types/handlebars": "4.1.0",
        "@types/jsdom": "16.2.6",
        "@types/mocha": "8.2.1",
        "@types/sinon": "9.0.10",
        "@typescript-eslint/eslint-plugin": "4.16.1",
        "@typescript-eslint/parser": "4.16.1",
        "@zoltu/typescript-transformer-append-js-extension": "1.0.1",
        "chai": "4.3.3",
        "clean-webpack-plugin": "3.0.0",
        "copy-webpack-plugin": "8.0.0",
        "copyfiles": "2.4.1",
        "cross-env": "7.0.3",
        "css-loader": "^5.1.1",
        "eslint": "7.21.0",
        "eslint-config-google": "0.14.0",
        "eslint-config-recommended": "4.1.0",
        "express": "4.17.1",
        "file-loader": "^6.2.0",
        "handlebars": "4.7.7",
        "html-webpack-plugin": "5.2.0",
        "husky": "4.3.8",
        "jsdom": "16.4.0",
        "jsdom-global": "3.0.2",
        "mini-css-extract-plugin": "1.3.9",
        "mocha": "8.3.1",
        "node-sass": "^5.0.0",
        "postcss": "^8.2.8",
        "postcss-cssnext": "^3.1.0",
        "postcss-import": "^14.0.0",
        "postcss-loader": "^5.2.0",
        "rimraf": "3.0.2",
        "sass": "1.32.8",
        "sass-loader": "^11.0.1",
        "sinon": "9.2.4",
        "sinon-chai": "3.5.0",
        "style-loader": "^2.0.0",
        "stylelint": "13.12.0",
        "stylelint-config-sass-guidelines": "8.0.0",
        "tough-cookie": "4.0.0",
        "ts-loader": "^8.0.17",
        "ts-node": "9.1.1",
        "tsconfig-paths-webpack-plugin": "3.3.0",
        "webpack": "5.24.3",
        "webpack-cli": "4.5.0",
        "webpack-dev-server": "3.11.2",
        "whatwg-url": "8.4.0"
    },
    "scripts": {
        "scss:fix": "stylelint --fix src/**/*.scss",
        "ts:fix": "eslint --fix src/**/*.ts",
        "lint:scss": "stylelint src/**/*.scss",
        "lint:ts": "eslint src/**/*.ts",
        "test": "cross-env TS_NODE_COMPILER_OPTIONS='{ \"module\": \"commonjs\" }' mocha -r ts-node/register -r jsdom-global/register src/**/*.spec.ts",
        "check": "npm run lint:ts && npm run lint:scss && npm run test",
        "start": "npm run express & browser-sync start --proxy 'localhost:4000' --files 'dist'",
        "dev": "npm run clean:build && webpack --watch",
        "build": "webpack",
        "clean:build": "rimraf dist/",
        "clean:modules": "rimraf node_modules/",
        "tsc": "ttsc",
        "build-tsc": "npm run tsc && npm run html && npm run css",
        "express": "node ./server.js",
        "start-tsc": "ttsc -w & npm run html & npm run css-w & npm run start & browser-sync start --proxy 'localhost:4000' --files 'dist'",
        "html": "find ./src/ -name \"*.html\" -type f -exec copyfiles -u 1 {} ./dist \\;",
        "css": "sass src/:dist/",
        "css-w": "sass --watch src/:dist/"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run check"
        }
    },
    "dependencies": {
        "typescript": "4.1.2"
    },
    "engines": {
        "node": "12.16.0",
        "npm": "6.13.4"
    }
}

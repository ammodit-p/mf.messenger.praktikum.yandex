{
    "name": "mf.messenger.praktikum.yandex",
    "version": "1.0.0",
    "private": true,
    "devDependencies": {
        "@types/chai": "^4.2.15",
        "@types/handlebars": "^4.1.0",
        "@types/jsdom": "^16.2.6",
        "@types/mocha": "^8.2.1",
        "@types/sinon": "^9.0.10",
        "@zoltu/typescript-transformer-append-js-extension": "^1.0.1",
        "chai": "^4.3.0",
        "chai-http": "^4.3.0",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "express": "4.17.1",
        "handlebars": "^4.7.6",
        "jsdom": "^16.4.0",
        "jsdom-global": "^3.0.2",
        "mocha": "^8.3.0",
        "mocha-jsdom": "^2.0.0",
        "sass": "^1.32.8",
        "sinon": "^9.2.4",
        "sinon-chai": "^3.5.0",
        "tough-cookie": "^4.0.0",
        "ts-node": "^9.1.1",
        "whatwg-url": "^8.4.0"
    },
    "scripts": {
        "tsc": "ttsc",
        "start": "node ./server.js",
        "dev": "ttsc -w & npm run html & npm run css-w & npm run start & browser-sync start --proxy 'localhost:4000' --files 'dist'",
        "clean": "rm -rf dist/",
        "fix-js": "find ./dist -name \"*.js\" -exec sed -i '' -E 's|(import .+ from ['\\''\"]\\.?\\./.+[^.][^j][^s])(['\\''\"])|\\1.js\\2|g' {} +",
        "html": "find ./src/ -name \"*.html\" -type f -exec copyfiles -u 1 {} ./dist \\;",
        "remove-js": "find ./src -name \"*.ts\" -type f -exec sed -i'' -E 's/.js//g' {} \\+",
        "remove-E": "find ./src -name \"*.ts-E\" -type f -exec rm -rf {} +",
        "css": "sass src/:dist/",
        "css-w": "sass --watch src/:dist/",
        "build": "npm run clean && npm run tsc && npm run html && npm run css",
        "test": "cross-env TS_NODE_COMPILER_OPTIONS='{ \"module\": \"commonjs\" }' mocha -r ts-node/register -r jsdom-global/register test/**/*.spec.ts"
    },
    "dependencies": {
        "@types/handlebars": "^4.1.0",
        "handlebars": "^4.7.6",
        "cssstyle": "^2.3.0",
        "typescript": "4.1.2"
    },
    "engines": {
        "node": "12.16.0",
        "npm": "6.13.4"
    }
}

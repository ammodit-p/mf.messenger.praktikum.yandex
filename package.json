        "webpack-cli": "^4.5.0",
        "webpack-dev-server": "^3.11.2",
        "whatwg-url": "^8.4.0"
    },
    "scripts": {
        "dev-server": "webpack serve --mode=development --progress",
        "build": "webpack",
        "dev": "webpack --watch",
        "tsc": "ttsc",
        "start": "node ./server.js",
        "dev-tsc": "ttsc -w & npm run html & npm run css-w & npm run start & browser-sync start --proxy 'localhost:4000' --files 'dist'",
        "clean": "rm -rf dist/",
        "fix-js": "find ./dist -name \"*.js\" -exec sed -i '' -E 's|(import .+ from ['\\''\"]\\.?\\./.+[^.][^j][^s])(['\\''\"])|\\1.js\\2|g' {} +",
        "html": "find ./src/ -name \"*.html\" -type f -exec copyfiles -u 1 {} ./dist \\;",
        "remove-js": "find ./src -name \"*.ts\" -type f -exec sed -i'' -E 's/.js//g' {} \\+",
        "remove-E": "find ./src -name \"*.ts-E\" -type f -exec rm -rf {} +",
        "css": "sass src/:dist/",
        "css-w": "sass --watch src/:dist/",
        "build-tsc": "npm run clean && npm run tsc && npm run html && npm run css",
        "test": "cross-env TS_NODE_COMPILER_OPTIONS='{ \"module\": \"commonjs\" }' mocha -r ts-node/register -r jsdom-global/register src/**/*.spec.ts"
    },
    "dependencies": {
        "@types/handlebars": "^4.1.0",
        "cssstyle": "^2.3.0",
        "fs-extra": "^9.1.0",
        "handlebars": "^4.7.6",
        "typescript": "4.1.2"
    },
    "engines": {
        "node": "12.16.0",
        "npm": "6.13.4"
    }
}
